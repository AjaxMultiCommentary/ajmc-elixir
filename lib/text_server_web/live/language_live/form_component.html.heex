<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="language-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :slug) %>
    <%= text_input(f, :slug) %>
    <%= error_tag(f, :slug) %>

    <%= label(f, :title) %>
    <%= text_input(f, :title) %>
    <%= error_tag(f, :title) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
