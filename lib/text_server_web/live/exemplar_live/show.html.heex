<article class="container mx-auto p-4">
  <h1 class="text-2xl font-bold"><%= @exemplar.title %></h1>

  <p><%= @exemplar.description %></p>

  <p><%= @exemplar.urn %></p>

  <h2 class="text-xl font-semibold">Text Nodes (demo):</h2>
  <%= for text_node <- Enum.reverse(@exemplar.text_nodes) do %>
    <div><%= Enum.join(text_node.location, ".") %>: <%= text_node.text %></div>
  <% end %>
</article>
